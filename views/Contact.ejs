<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Kontak</a>
            
            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %> 
              </div>
            <% } %>
            
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No Hp</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger" role="alert">
                          Data kontak masih kosong <br>
                        </div>
                      </td>
                    </tr>
                  <% } else {%>  

                  <% contacts.forEach((con, i) => { %>
                        <tr>
                          <th scope="row"><%= i++ %> </th>
                          <td><%= con.nama %> </td>
                          <td><%= con.nohp %> </td>
                          <td><%= con.email %> </td>
                          <td><a href="/contact/<%= con.nama %> " class="btn btn-success badge rounded-pill bg-primary"><i class="bi bi-info-square"></i> detail</a></td>
                        </tr>
                    <% }) %>
                    <% }  %> 
                  
                </tbody>
              </table>
        </div>
    </div>
</div>